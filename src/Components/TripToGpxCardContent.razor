@inherits MudComponentBase

@if (Task.OriginalMvTripFile != null)
{
    <MudGrid>
        <MudItem xs="6">
            <MudField AdornmentIcon="@Icons.Material.Outlined.Speed" Adornment="Adornment.Start" Variant="Variant.Text">@Math.Round(Task.OriginalMvTripFile.AvgSpeedKmh,2) km/h</MudField>
            <MudField AdornmentIcon="@Icons.Material.Outlined.TextRotationAngledown" Adornment="Adornment.Start" Variant="Variant.Text">@Task.OriginalMvTripFile.MaxRollAngle Â°</MudField>
            <MudField AdornmentIcon="@Icons.Material.Outlined.MultilineChart" Adornment="Adornment.Start" Variant="Variant.Text">@Task.OriginalMvTripFile.MaxThrottle %</MudField>
                                        
        </MudItem>
        <MudItem xs="6">
